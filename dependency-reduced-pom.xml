<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.heliosapm.benchmarks</groupId>
  <artifactId>map-benchmarks</artifactId>
  <name>Map Benchmarks</name>
  <version>0.0.1-SNAPSHOT</version>
  <description>CHM vs NBHM vs NBHML vs GuavaCache vs CaffeineCache</description>
  <url>https://github.com/nickman/MapBenchmark</url>
  <inceptionYear>2019</inceptionYear>
  <developers>
    <developer>
      <id>nwhitehead</id>
      <name>Nicholas Whitehead</name>
      <email>whitehead.nicholas@gmail.com</email>
      <roles>
        <role>developer</role>
      </roles>
      <timezone>-5</timezone>
    </developer>
  </developers>
  <licenses>
    <license>
      <name>Apache 2.0</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0</url>
      <distribution>repo</distribution>
    </license>
  </licenses>
  <build>
    <defaultGoal>install</defaultGoal>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>1.2.1</version>
        <configuration>
          <executable>java</executable>
          <arguments>
            <argument>-Xms1024m</argument>
            <argument>-Xmx1024m</argument>
            <argument>-classpath</argument>
            <classpath />
            <argument>com.heliosapm.benchmark.maps.MapBenchmark</argument>
          </arguments>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.0.2</version>
        <configuration>
          <source>${compiler-target.version}</source>
          <target>${compiler-target.version}</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>${shade.version}</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <shadedArtifactId />
              <transformers>
                <transformer>
                  <mainClass>com.heliosapm.benchmark.maps.MapBenchmark</mainClass>
                </transformer>
                <transformer />
              </transformers>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                  </excludes>
                </filter>
              </filters>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.cache2k</groupId>
      <artifactId>cache2k-base-bom</artifactId>
      <version>1.2.1.Final</version>
      <type>pom</type>
      <scope>compile</scope>
    </dependency>
  </dependencies>
  <properties>
    <jctools.version>2.1.2</jctools.version>
    <compiler-source.version>1.8</compiler-source.version>
    <caffeine.version>2.7.0</caffeine.version>
    <compiler-target.version>1.8</compiler-target.version>
    <guava.version>27.1-jre</guava.version>
    <shade.version>3.2.1</shade.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <ohc.version>0.7.0</ohc.version>
    <cache2k.version>1.2.1.Final</cache2k.version>
    <bytebuddy.version>1.9.12</bytebuddy.version>
  </properties>
</project>
